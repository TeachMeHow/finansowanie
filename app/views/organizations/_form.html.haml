= form_for @organization do |f|
  - if @organization.errors.any?
    #error_explanation
      %h2= "#{pluralize(@organization.errors.count, "error")} prohibited this organization from being saved:"
      %ul
        - @organization.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :time_of_establishment
    = f.date_select :time_of_establishment
  .field
    = options_from_collection_for_select(Faculty.all, :id, :name)
    = f.collection_select(:faculty_id, Faculty.all, :id, :name)
  .actions
    = f.submit 'Save'
